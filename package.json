{
  "name": "vscode-acmoj",
  "displayName": "ACMOJ Helper",
  "description": "View problems, submit code, and check results for ACMOJ.",
  "version": "0.2.5",
  "publisher": "TheUnknownThing",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheUnknownThing/vscode-acmoj.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "acmoj.setToken",
        "title": "ACMOJ: Set Personal Access Token"
      },
      {
        "command": "acmoj.clearToken",
        "title": "ACMOJ: Clear Personal Access Token"
      },
      {
        "command": "acmoj.showMyProfile",
        "title": "ACMOJ: Show My Profile"
      },
      {
        "command": "acmoj.viewProblemById",
        "title": "ACMOJ: View Problem by ID..."
      },
      {
        "command": "acmoj.refreshProblemsets",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "acmoj.refreshSubmissions",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "acmoj.viewSubmission",
        "title": "ACMOJ: View Submission"
      },
      {
        "command": "acmoj.submitCurrentFile",
        "title": "ACMOJ: Submit Current File"
      },
      {
        "command": "acmoj.abortSubmission",
        "title": "ACMOJ: Abort Submission"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "acmoj-container",
          "title": "ACMOJ",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "acmoj-container": [
        {
          "id": "acmojProblemsets",
          "name": "Problemsets",
          "type": "tree",
          "contextualTitle": "ACMOJ Problemsets"
        },
        {
          "id": "acmojSubmissions",
          "name": "My Submissions",
          "type": "tree",
          "contextualTitle": "ACMOJ Submissions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "acmoj.refreshProblemsets",
          "when": "view == acmojProblemsets",
          "group": "navigation"
        },
        {
          "command": "acmoj.refreshSubmissions",
          "when": "view == acmojSubmissions",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "acmoj.submitCurrentFile",
          "when": "editorLangId && acmoj.loggedIn",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "acmoj.setToken",
          "when": "!acmoj.loggedIn"
        },
        {
          "command": "acmoj.clearToken",
          "when": "acmoj.loggedIn"
        },
        {
          "command": "acmoj.showMyProfile",
          "when": "acmoj.loggedIn"
        },
        {
          "command": "acmoj.viewProblemById",
          "when": "acmoj.loggedIn"
        },
        {
          "command": "acmoj.submitCurrentFile",
          "when": "editorLangId && acmoj.loggedIn"
        }
      ]
    },
    "configuration": {
      "title": "ACMOJ",
      "properties": {
        "acmoj.baseUrl": {
          "type": "string",
          "default": "https://acm.sjtu.edu.cn",
          "description": "Base URL for the ACMOJ API."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:tsc": "tsc --watch",
    "watch:esbuild": "esbuild src/extension.ts --bundle --platform=node --outdir=out --external:vscode --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vscode/markdown-it-katex": "^1.1.1",
    "axios": "^1.0.0",
    "katex": "^0.16.21",
    "markdown-it": "^13.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/markdown-it": "^13.0.1",
    "@types/node": "^18.19.84",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.25.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5",
    "typescript-eslint": "^8.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  }
}
